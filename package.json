{
  "name": "express-mongodb-base",
  "version": "0.0.1",
  "description": "Template Express Server Project with MongoDb, Mongoose and Inversify Configured.",
  "repository": {
    "type": "git",
    "url": "https://github.com/omerg/express-mongodb-base"
  },
  "main": "index.js",
  "author": "Omer Gurarslan",
  "license": "MIT",
  "scripts": {
    "test": "jest --forceExit --coverage --verbose",
    "start": "npm run build-ts && node dist/index.js",
    "debug": "npm run build-ts && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/index.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "concurrently": "^4.0.1",
    "cors": "^2.8.4",
    "debug": "^4.1.0",
    "event-stream": "^4.0.0",
    "express": "^4.14.0",
    "express-flash": "^0.0.2",
    "express-jwt": "^6.0.0",
    "express-session": "^1.14.2",
    "express-validator": "^3.1.3",
    "inversify": "4.3.0",
    "jsonwebtoken": "^8.3.0",
    "mongodb": "~3.1",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.0",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.3",
    "@types/mongoose": "^4.7.34",
    "@types/supertest": "^2.0.4",
    "typescript": "^2.7.2",
    "nodemon": "^1.13.0",
    "ts-node": "^1.6.1",
    "jest": "^22.0.4",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.4"
  }
}
